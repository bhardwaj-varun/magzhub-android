<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15"
        android:background="#ffffff">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/issuesubMagThumbnail"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_search"
                    android:background="@color/windowBackground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/issuesubMagName"
                    android:text="magazineName"
                    android:textSize="20dp"

                    android:gravity="center"
                    android:textColor="@color/myNavigationColor"
                    android:background="@color/windowBackground"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/issuedMagIssueName"
                    android:text="magazine Issue name"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/myNavigationColor"
                    android:background="@color/windowBackground"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Read"
                    android:id="@+id/issuesubMagRead"
                    android:textSize="20dp"
                    android:layout_margin="2dp"
                    android:background="@color/btn_background"
                    android:textColor="@color/text_color"
                    />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15"
        android:background="#ffffff">
    </RelativeLayout>
</LinearLayout>
